{
  "compilerOptions": {
    "target": "ES2022",           // <-- must be ES2022 or higher for top-level await
    "module": "NodeNext",         // okay for Node ESM
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/archive", "src/stuff"]
}
